<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:columnCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="7">

        <TextView
            android:id="@+id/t1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="T1"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t1ValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="0"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="T2"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t2ValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="1"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="T3"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t3ValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="fill"
            android:paddingLeft="10sp"
            android:tag="2"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t4TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="T4"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/t4ValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="3"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/pressureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="Pressure"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="4"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/pressureValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="4"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="4"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/humidityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="Humidity"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="5"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/humidityValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="5"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="5"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/husenstTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="right"
            android:paddingRight="10sp"
            android:text="HuSensT"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="6"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/husenstValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:paddingLeft="10sp"
            android:tag="6"
            android:textColor="#BDC3CB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_gravity="fill"
            app:layout_row="6"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="startCalculations"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>